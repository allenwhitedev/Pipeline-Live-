<% provide(:title, 'Organization') %>
<h1>Sign up Your Organization</h1><style>h1 {text-align: center;}</style>

<div class="row">
  <div class="form-area">
    <%= form_for(@organization) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Signup organization", class: "btn btn-large btn-primary", id: "signup-btn" %>
    <% end %>
  </div>
</div>