<% provide(:title, @event.title) %>
<div class="container">
	
	    <section>
	      
	      <h1>
	      	<%= @event.title %>
		      	
		      <% if !current_user.attending?(@event) && @event.checkincode.nil? %>
		      	<span class="locked-event">[Locked]</span>
		      <% else %>
			      <% if !current_user.attending?(@event) %>
			      	<span class="unlocked-event">[Unlocked]</span>
			      <% else %>
			      	<span class="unlocked-event">[Checked In]</span>
			      <% end %>
		       <% end %>
	      <h2>
	      	<div class="well"><h4><%= @event.comment %><h4></div>  
	        <div class="well well-lg">        
	        <%= render 'shared/statse' %>
	        <% if !current_user.attending?(@event) %>
	        	Value: 	       
	        <% else %>
	        	Earned: +
	        <% end %>
	        <%= pluralize(@event.points, 'pt.', 'pts.') %> <br>

	        <%= render 'attend_form' if signed_in? %>
	        <% if current_user.moderator? %>
	         Checkin code:  <%= @event.checkincode %>
	        <% else %>
	        <% end %>
	      </h2></div>
	    </section>
	 
	 
</div>