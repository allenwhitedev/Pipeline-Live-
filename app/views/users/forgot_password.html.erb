<% provide(:title, "Reset Your Password") %>

<div class="row">
  <div class="form-area">
  <div class="orga-signin">HSA Login</div><style>.orga-signin {text-align: center; font-size: 2.5em; margin-top: 1em; }</style>
<%= form_for(:user, url: password_reset_path, method: :get) do |f|  %>
	
	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.submit "Reset Password", class: "btn btn-large btn-primary" %>
<% end %>

 </div>
</div>